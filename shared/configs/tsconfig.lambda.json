{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2022",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "lib": ["es2022"],
    "target": "es2022",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules", "tmp"]
}
